
.top {
	background: linear-gradient(to bottom, #FF2C2E, #FC615F);
	position: relative;
	overflow: hidden;
	height: 11vh;
}
.light-circle {
	background-color: #FD7B79;
	width: 1000rpx;
	height: 700rpx;
	border-radius: 60%;
	position: absolute;
	left: -700rpx;
	top: -100px;
	z-index: 1;
}
.light-circle-right {
	background-color: #FD7B79;
	width: 1000rpx;
	height: 700rpx;
	border-radius: 60%;
	position: absolute;
	right: -800rpx;
	top: -100px;
	z-index: 1;
}

